<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>project</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <description></description>
    <display-name>LoginController</display-name>
    <servlet-name>LoginController</servlet-name>
    <servlet-class>controller.LoginController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginController</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>RegisterController</display-name>
    <servlet-name>RegisterController</servlet-name>
    <servlet-class>controller.RegisterController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterController</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>View Contents</servlet-name>
    <jsp-file>/Views/viewContents.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>View Contents</servlet-name>
    <url-pattern>/view/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Edit Contents</servlet-name>
    <jsp-file>/Views/editContent.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Edit Contents</servlet-name>
    <url-pattern>/editContent/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Delete Content</servlet-name>
    <servlet-class>controllers.DeleteContentController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Delete Content</servlet-name>
    <url-pattern>/deleteContent/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>AddController</display-name>
    <servlet-name>AddController</servlet-name>
    <servlet-class>controller.AddController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddController</servlet-name>
    <url-pattern>/AddController</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>AddContentController</display-name>
    <servlet-name>AddContentController</servlet-name>
    <servlet-class>controller.AddContentController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddContentController</servlet-name>
    <url-pattern>/AddContentController</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>DeleteContentController</display-name>
    <servlet-name>DeleteContentController</servlet-name>
    <servlet-class>controller.DeleteContentController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteContentController</servlet-name>
    <url-pattern>/delete</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>EditMemberController</display-name>
    <servlet-name>EditMemberController</servlet-name>
    <servlet-class>controller.EditMemberController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditMemberController</servlet-name>
    <url-pattern>/EditMemberController</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>EditContentController</display-name>
    <servlet-name>EditContentController</servlet-name>
    <servlet-class>controller.EditContentController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditContentController</servlet-name>
    <url-pattern>/EditContentController/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>GetPassController</display-name>
    <servlet-name>GetPassController</servlet-name>
    <servlet-class>controller.GetPassController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetPassController</servlet-name>
    <url-pattern>/GetPassController</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>MainController</display-name>
    <servlet-name>MainController</servlet-name>
    <servlet-class>controller.MainController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MainController</servlet-name>
    <url-pattern>/MainController</url-pattern>
  </servlet-mapping>
  
  <listener>
    <listener-class>org.apache.tiles.extras.complete.CompleteAutoloadTilesListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>Tiles Dispatch</servlet-name>
    <servlet-class>org.apache.tiles.web.util.TilesDispatchServlet
        </servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Tiles Dispatch</servlet-name>
    <url-pattern>*.tiles</url-pattern>
  </servlet-mapping>
</web-app>